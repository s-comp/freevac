extends ../template/employer-one-btn-head
block title
	| Markup
block main
	+breadcrumb('Разместить вакансию', 'Мои вакансии')
	.c-content
		form(action="#").b-form
			.b-table
				.container
					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Название вакансии *
							.col-12.col-lg-9
								input(type='text' placeholder='Название до 70 символов' required).js-required.place-norm

					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Сфера *
							.col-12.col-lg-5
								.b-select.js-dropdown-body
									.b-select__caption-wrap.js-dropdown-btn
										span.b-select__caption.js-value-name Выберите сферу деятельности
										input(type="hidden" value="" name="select").js-required.js-value-input
										i.e-icon.e-icon--no-border.e-icon--no-size.e-icon--m0
											+icon('arrow-down-xs-dark','e-icon__figure e-icon__figure--arrow-small b-select__arrow')
									.b-select__dropdown(data-child="a").js-dropdown-content
										a.b-select__item(data-value="IT, компьютеры, интернет") IT, компьютеры, интернет
										a.b-select__item.active(data-value="Администрация, руководство среднего звена") Администрация, руководство среднего звена
										a.b-select__item(data-value="Бухгалтерия, аудит") Бухгалтерия, аудит
										a.b-select__item(data-value="Гостинично-ресторанный бизнес, туризм") Гостинично-ресторанный бизнес, туризм
										a.b-select__item(data-value="Дизайн, творчество ") Дизайн, творчество
										a.b-select__item(data-value="Рабочие специальности, производство ") Рабочие специальности, производство


					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Город *
							.col-12.col-lg-5
								.b-select.js-dropdown-body
									.b-select__caption-wrap.js-dropdown-btn
										span.b-select__caption.js-value-name Выберите город
										input(type="hidden" value="" name="select").js-required.js-value-input
										i.e-icon.e-icon--no-border.e-icon--no-size.e-icon--m0
											+icon('arrow-down-xs-dark','e-icon__figure e-icon__figure--arrow-small b-select__arrow')
									.b-select__dropdown(data-child="a").js-dropdown-content
										a.b-select__item(data-value="Киев") Киев
										a.b-select__item.active(data-value="Харьков") Харьков
										a.b-select__item(data-value="Львов") Львов

					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Вид деятельности *
							.col-12.col-lg-5
								.b-select.js-dropdown-body
									.b-select__caption-wrap.js-dropdown-btn
										span.b-select__caption.js-value-name Выберите вид деятельности
										input(type="hidden" value="" name="select").js-required.js-value-input
										i.e-icon.e-icon--no-border.e-icon--no-size.e-icon--m0
											+icon('arrow-down-xs-dark','e-icon__figure e-icon__figure--arrow-small b-select__arrow')
									.b-select__dropdown(data-child="a").js-dropdown-content
										a.b-select__item(data-value="Украинский") Украинский
										a.b-select__item.active(data-value="Белорусский") Белорусский
										a.b-select__item(data-value="Русский") Русский
					//table row
					.b-table__row
						.row
							.col-lg-3.b-table__column-title
								ul.b-list
									li.b-list__item.b-list__item--sm
										span.h7 Обязанности
									li.b-list__item.b-list__item--sm
										span.h7 Условия
									li.b-list__item.b-list__item--sm
										span.h7 Опыт
							.col-12.col-lg-9
								include ../blocks/wysiwyg

					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Язык
							.col-12.col-lg-8
								.row.align-items-center
									.col-md-5.b-table__md-mb-30
										.b-select.js-dropdown-body
											.b-select__caption-wrap.js-dropdown-btn
												span.b-select__caption.js-value-name Выберите язык
												input(type="hidden" value="" name="select").js-value-input
												i.e-icon.e-icon--no-border.e-icon--no-size.e-icon--m0
													+icon('arrow-down-xs-dark','e-icon__figure e-icon__figure--arrow-small b-select__arrow')
											.b-select__dropdown(data-child="a").js-dropdown-content
												a.b-select__item(data-value="Украинский") Украинский
												a.b-select__item(data-value="Белорусский") Белорусский
												a.b-select__item(data-value="Русский") Русский
									.col-md-5.b-table__md-mb-30
										.b-select.js-dropdown-body
											.b-select__caption-wrap.js-dropdown-btn
												span.b-select__caption.js-value-name Выберите уровень
												input(type="hidden" value="" name="select").js-value-input
												i.e-icon.e-icon--no-border.e-icon--no-size.e-icon--m0
													+icon('arrow-down-xs-dark','e-icon__figure e-icon__figure--arrow-small b-select__arrow')
											.b-select__dropdown(data-child="a").js-dropdown-content
												a.b-select__item(data-value="Низкий") Низкий
												a.b-select__item(data-value="Средний") средний
												a.b-select__item(data-value="Высокий") Высокий
									.col-md-2
										a(href="#")
											i.e-icon.e-icon--md.e-icon--m0
												+icon('plus','e-icon__figure e-icon__figure--plus')

					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Зарплата
							.col-12.col-lg-8
								.row.align-items-center.no-gutters
									.col-11.col-md-2
										input(type='text' placeholder='0' required).place-norm

									.col-1.col-md-2
										i.e-icon.e-icon--md.e-icon--m0.e-icon--no-border
											+icon('dollar','e-icon__figure e-icon__figure--plus')


					//table row
					.b-table__row
						.row.align-items-center
							.col-lg-3.b-table__column-title
								h6.h7.b-table__caption Кандидаты *
							.col-12.col-lg-8
								label.e-radio.e-radio--md
									input(type='radio', checked='checked', name='candidats')
									span.e-radio__btn
									| Все кандидаты
								label.e-radio.e-radio--md
									input(type='radio', name='candidats')
									span.e-radio__btn
									| Только кандидаты с видео-резюме

					//table row
					.b-table__footer
						.row.align-items-center
							.col-12.col-sm-6.col-lg-4.b-table__back.text-a-c-sm-down
								a(href="#vacancy-preview").btn-transp.js-modal-btn Предварительный просмотр
							.col-12.col-sm-6.col-lg-8.text-a-c-sm-down
								a(href="#").btn.btn--lg Опубликовать



	//vacancy-preview
	.o-modal#vacancy-preview
		.o-modal__center
			.o-modal__content.__lg
				.o-modal__close.js-modal-close
					i.e-icon.e-icon--xs.e-icon--m0
						+icon('close','e-icon__figure e-icon__figure--close e-icon__figure--close--xs')
				h5.h5.o-modal__caption Предварительный просмотр
				.o-modal__body
					.b-vacancy
						.b-vacancy__header
							h4.b-vacancy__caption Менеджер по продажам со знанием англ. языка (IT)

							p.b-vacancy__paragr.b-vacancy__price
								i.e-icon.e-icon--xs.e-icon--mr10
									+icon('wallet','e-icon__figure e-icon__figure--xs')

								| от <span class="strong">20 000</span> грн.
							p.b-vacancy__paragr
								i.e-icon.e-icon--xs.e-icon--mr10
									+icon('location','e-icon__figure e-icon__figure--xs')

								| Киев

						.b-vacancy__item-block
							.row
								.col-md-2
									p.b-vacancy__light-text Компания:

								.col-md-8
									p.b-vacancy__under-line <a href="#" class="strong">Soft-Group</a> <a href="#" class="b-vacancy__light-text">(Все вакансии)</a>

							.row
								.col-md-2
									p.b-vacancy__light-text Вид занятости:

								.col-md-8
									p полная занятость, неполная занятость, готовы взять студента

							.row
								.col-md-2
									p.b-vacancy__light-text Язык:

								.col-md-8
									p Английский — средний


						.b-vacancy__item-block

							h6.h6 Необходимые навыки

							ul.b-list
								li.b-list__item Условия работы: официальное оформление, полный соц.пакет. Обучение в отделе продажи предприятия.
								li.b-list__item Желание работать и получать достойную заработную плату;
								li.b-list__item Умение общаться с клиентами, расположить их к себе;
								li.b-list__item Трудолюбие;
								li.b-list__item Аналитический ум;
								li.b-list__item Опыт работы в большой команде приветствуется.

						.b-vacancy__item-block

							h6.h6 Дополнительно приветствуются

							ul.b-list
								li.b-list__item Регистрация пользователей локальной сети и почтового сервера, назначение идентификаторов и паролей.
								li.b-list__item Установка операционных систем и необходимого для работы программного обеспечения.
								li.b-list__item Знание правильной эксплуатации орг. техники, её настроек и устранения неполадок.

						.b-vacancy__item-block

							h6.h6 Мы предлагаем

							ul.b-list
								li.b-list__item Работу в комфортном офисе в центре города
								li.b-list__item Гибкий график: 7 часов в день / 5 дней в неделю
								li.b-list__item Хорошо оборудованный офис со всеми удобствами и «плюшками» (корпоративные программы/скидки, кухня и печенюшки, игровая комната с видео- и настольными играми и т.д.)
								li.b-list__item Оплата: фиксированная ставка и/или % от заказов
								li.b-list__item Прямые USA/Europe-заказчики, интересные проекты

							p Компания работает на рынке web разработки и аутсорсинга с 2005 г. За продолжительное время работы наша команда разработала и внедрила множество проектов различной степени сложности.

							p На сегодняшний день основные наши клиенты это стартап-компании из Европы (Великобритания, Германия, Нидерланды, Дания), США и Израиля, а также те, кто заинтересован в кастомных решениях. В ближайшее время планируется расширение компании и открытие нового офиса.

				.o-modal__footer.__border-top
					button.btn.btn--lg Опубликовать

